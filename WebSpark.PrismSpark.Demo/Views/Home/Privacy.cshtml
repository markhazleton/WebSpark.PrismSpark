@{
    ViewData["Title"] = "Privacy Policy";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row">
        <div class="col-12">
            <div class="bg-primary text-white rounded-3 p-4 mb-5">
                <div class="container">
                    <h1 class="display-5 fw-bold mb-3">
                        <i class="bi bi-shield-check me-3"></i>Privacy Policy
                    </h1>
                    <p class="fs-5 mb-3">
                        Your privacy is important to us. This policy explains how we handle information on the WebSpark.PrismSpark demonstration site.
                    </p>
                    <div class="d-flex align-items-center">
                        <i class="bi bi-calendar3 me-2"></i>
                        <span>Last updated: May 29, 2025</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Summary -->
    <div class="row mb-5">
        <div class="col-12">
            <div class="alert alert-info d-flex align-items-start" role="alert">
                <i class="bi bi-info-circle-fill fs-4 me-3 mt-1"></i>
                <div>
                    <h5 class="alert-heading mb-2">Privacy Summary</h5>
                    <p class="mb-2">
                        <strong>This is a demonstration site for the WebSpark.PrismSpark NuGet package.</strong> 
                        We only use analytics tools to understand site usage and improve the demonstration experience.
                    </p>
                    <ul class="mb-0">
                        <li>No personal information is collected or stored</li>
                        <li>No user accounts or registration required</li>
                        <li>Only anonymous analytics data is collected</li>
                        <li>No cookies for tracking purposes</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="row">
        <div class="col-lg-9">
            <!-- Information We Collect -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-collection text-primary me-2"></i>Information We Collect
                </h2>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Analytics Data Only</h5>
                        <p class="card-text">
                            We use analytics services to understand how visitors interact with our demonstration site. 
                            This helps us improve the user experience and showcase the WebSpark.PrismSpark library more effectively.
                        </p>
                        
                        <div class="row g-3 mt-3">
                            <div class="col-md-6">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="fw-bold text-primary">
                                        <i class="bi bi-graph-up me-2"></i>Google Analytics
                                    </h6>
                                    <ul class="small mb-0">
                                        <li>Page views and session duration</li>
                                        <li>Browser and device information</li>
                                        <li>General geographic location (country/region)</li>
                                        <li>Referral sources</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="border rounded p-3 h-100">
                                    <h6 class="fw-bold text-primary">
                                        <i class="bi bi-eye me-2"></i>Microsoft Clarity
                                    </h6>
                                    <ul class="small mb-0">
                                        <li>User interaction patterns</li>
                                        <li>Click and scroll behavior</li>
                                        <li>Page performance metrics</li>
                                        <li>Technical error logging</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                        
                        <div class="alert alert-success mt-4 mb-0">
                            <i class="bi bi-check-circle-fill me-2"></i>
                            <strong>Important:</strong> All analytics data is anonymous and cannot be used to identify individual users.
                        </div>
                    </div>
                </div>
            </section>

            <!-- Information We Don't Collect -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-shield-x text-success me-2"></i>Information We Don't Collect
                </h2>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-lg-6">
                                <h6 class="fw-bold text-success">
                                    <i class="bi bi-x-circle me-2"></i>No Personal Data
                                </h6>
                                <ul class="small">
                                    <li>Names, email addresses, or contact information</li>
                                    <li>Account credentials or login information</li>
                                    <li>Payment or financial information</li>
                                    <li>Personal identifiers</li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <h6 class="fw-bold text-success">
                                    <i class="bi bi-x-circle me-2"></i>No Content Storage
                                </h6>
                                <ul class="small">
                                    <li>Code entered in the live editor</li>
                                    <li>User-generated content</li>
                                    <li>File uploads or downloads</li>
                                    <li>Form submissions</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- How We Use Information -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-gear text-primary me-2"></i>How We Use Information
                </h2>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <p>The anonymous analytics data we collect is used solely for:</p>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                                    <div>
                                        <strong>Improving User Experience</strong>
                                        <p class="small text-muted mb-0">Understanding how visitors interact with the demonstration features</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                                    <div>
                                        <strong>Technical Performance</strong>
                                        <p class="small text-muted mb-0">Monitoring site performance and identifying technical issues</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                                    <div>
                                        <strong>Feature Development</strong>
                                        <p class="small text-muted mb-0">Understanding which demonstration features are most valuable</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-check-circle-fill text-success me-2 mt-1"></i>
                                    <div>
                                        <strong>Library Improvement</strong>
                                        <p class="small text-muted mb-0">Gathering insights to enhance the WebSpark.PrismSpark library</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Cookies and Tracking -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-cookie-bite text-primary me-2"></i>Cookies and Tracking
                </h2>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-lg-8">
                                <h6 class="fw-bold">Analytics Cookies Only</h6>
                                <p>
                                    We only use cookies that are essential for analytics functionality. These cookies:
                                </p>
                                <ul>
                                    <li>Help us understand site usage patterns</li>
                                    <li>Enable analytics services to function properly</li>
                                    <li>Do not store personally identifiable information</li>
                                    <li>Are managed by Google Analytics and Microsoft Clarity</li>
                                </ul>
                            </div>
                            <div class="col-lg-4">
                                <div class="bg-light rounded p-3">
                                    <h6 class="fw-bold text-primary">
                                        <i class="bi bi-toggles me-2"></i>Your Control
                                    </h6>
                                    <p class="small mb-2">You can disable analytics cookies through:</p>
                                    <ul class="small mb-0">
                                        <li>Browser cookie settings</li>
                                        <li>Ad blocker extensions</li>
                                        <li>Analytics opt-out tools</li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Third-Party Services -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-building text-primary me-2"></i>Third-Party Services
                </h2>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <p>We use the following trusted third-party services for analytics:</p>
                        <div class="row g-4">
                            <div class="col-md-6">
                                <div class="border rounded p-3">
                                    <h6 class="fw-bold">
                                        <i class="bi bi-google text-primary me-2"></i>Google Analytics
                                    </h6>
                                    <p class="small mb-2">Industry-standard web analytics service</p>
                                    <a href="https://policies.google.com/privacy" target="_blank" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-external-link me-1"></i>Privacy Policy
                                    </a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="border rounded p-3">
                                    <h6 class="fw-bold">
                                        <i class="bi bi-microsoft text-primary me-2"></i>Microsoft Clarity
                                    </h6>
                                    <p class="small mb-2">User behavior analytics and heatmaps</p>
                                    <a href="https://privacy.microsoft.com/privacystatement" target="_blank" class="btn btn-outline-primary btn-sm">
                                        <i class="bi bi-external-link me-1"></i>Privacy Policy
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Data Security -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-lock text-primary me-2"></i>Data Security
                </h2>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <div class="row g-4">
                            <div class="col-lg-6">
                                <h6 class="fw-bold text-success">
                                    <i class="bi bi-shield-check me-2"></i>Security Measures
                                </h6>
                                <ul class="small">
                                    <li>HTTPS encryption for all connections</li>
                                    <li>Secure hosting infrastructure</li>
                                    <li>Regular security updates</li>
                                    <li>Industry-standard analytics services</li>
                                </ul>
                            </div>
                            <div class="col-lg-6">
                                <h6 class="fw-bold text-info">
                                    <i class="bi bi-clock me-2"></i>Data Retention
                                </h6>
                                <ul class="small">
                                    <li>Analytics data retained per service defaults</li>
                                    <li>Google Analytics: 26 months</li>
                                    <li>Microsoft Clarity: 90 days</li>
                                    <li>No personal data to delete</li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <!-- Your Rights -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-person-check text-primary me-2"></i>Your Rights and Choices
                </h2>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <p>Since we don't collect personal information, most traditional privacy rights don't apply. However, you can:</p>
                        <div class="row g-3">
                            <div class="col-lg-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-toggle-off text-warning me-2 mt-1"></i>
                                    <div>
                                        <strong>Opt-out of Analytics</strong>
                                        <p class="small text-muted mb-0">Disable cookies or use browser privacy tools</p>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="d-flex align-items-start">
                                    <i class="bi bi-eye-slash text-info me-2 mt-1"></i>
                                    <div>
                                        <strong>Browse Privately</strong>
                                        <p class="small text-muted mb-0">Use incognito/private browsing mode</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="alert alert-info mt-4 mb-0">
                            <i class="bi bi-info-circle me-2"></i>
                            <strong>Note:</strong> Since no personal data is collected, there's no personal information to access, correct, or delete.
                        </div>
                    </div>
                </div>
            </section>

            <!-- Contact Information -->
            <section class="mb-5">
                <h2 class="h3 mb-4">
                    <i class="bi bi-envelope text-primary me-2"></i>Contact Us
                </h2>
                <div class="card border-0 shadow-sm">
                    <div class="card-body">
                        <p>If you have questions about this privacy policy or the WebSpark.PrismSpark demonstration site:</p>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-github text-primary me-2"></i>
                                    <div>
                                        <strong>GitHub Issues</strong><br>
                                        <a href="https://github.com/MarkHazleton/WebSpark.PrismSpark/issues" target="_blank" class="text-decoration-none">
                                            Open an issue on GitHub
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-question-circle text-primary me-2"></i>
                                    <div>
                                        <strong>General Questions</strong><br>
                                        <span class="text-muted">Use GitHub Discussions for questions</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>

        <!-- Sidebar -->
        <div class="col-lg-3">
            <div class="sticky-top" style="top: 2rem;">
                <!-- Quick Links -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h6 class="mb-0">
                            <i class="bi bi-list-ul me-2"></i>Quick Navigation
                        </h6>
                    </div>
                    <div class="card-body p-0">
                        <nav class="nav nav-pills flex-column">
                            <a class="nav-link" href="#information-we-collect">Information We Collect</a>
                            <a class="nav-link" href="#information-we-dont-collect">What We Don't Collect</a>
                            <a class="nav-link" href="#how-we-use-information">How We Use Information</a>
                            <a class="nav-link" href="#cookies-and-tracking">Cookies & Tracking</a>
                            <a class="nav-link" href="#third-party-services">Third-Party Services</a>
                            <a class="nav-link" href="#data-security">Data Security</a>
                            <a class="nav-link" href="#your-rights">Your Rights</a>
                            <a class="nav-link" href="#contact-us">Contact Us</a>
                        </nav>
                    </div>
                </div>

                <!-- Privacy Highlights -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-success text-white">
                        <h6 class="mb-0">
                            <i class="bi bi-check-circle me-2"></i>Privacy Highlights
                        </h6>
                    </div>
                    <div class="card-body">
                        <ul class="list-unstyled small mb-0">
                            <li class="mb-2">
                                <i class="bi bi-check text-success me-2"></i>
                                No personal data collected
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check text-success me-2"></i>
                                Anonymous analytics only
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check text-success me-2"></i>
                                No user accounts required
                            </li>
                            <li class="mb-2">
                                <i class="bi bi-check text-success me-2"></i>
                                HTTPS encryption
                            </li>
                            <li class="mb-0">
                                <i class="bi bi-check text-success me-2"></i>
                                Transparent data usage
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Footer Note -->
    <div class="row mt-5">
        <div class="col-12">
            <div class="alert alert-light border text-center">
                <i class="bi bi-info-circle text-muted me-2"></i>
                <strong>This is a demonstration site</strong> for the WebSpark.PrismSpark NuGet package. 
                We are committed to protecting your privacy while showcasing the library's capabilities.
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }
    
    .card:hover {
        transform: translateY(-1px);
    }
    
    .nav-pills .nav-link {
        color: var(--bs-gray-700);
        font-size: 0.875rem;
        padding: 0.5rem 1rem;
    }
    
    .nav-pills .nav-link:hover {
        background-color: var(--bs-light);
        color: var(--bs-primary);
    }
    
    section {
        scroll-margin-top: 2rem;
    }
</style>
